#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
struct contacto{
	char nomb[50];
	char apellidoP[50];
	char apellidoM[50];
	char tel[10];
	char calle[50];
	char col[50];
}Contacto;
int menu();
int alta();
int mostrar();
int borrar();

int main(){
	printf("\nHola, bienvenido a tu agenda de contactos");
	printf("\nSi es la primera vez que utilizas esta agenda, se creara un archivo agenda.txt autom√°ticamente");
	printf("\nBuscando el archivo agenda.txt...");
	FILE *ptrF;
	ptrF=fopen("agenda.txt", "r");
	if(ptrF==NULL){
		fputs("\nCreando archivo...", stderr);
		fclose(ptrF);		
		printf("\n...");
		ptrF=fopen("agenda.txt", "w");
		fclose(ptrF);
		printf("\nArchivo creado");
		printf("\nReinicie el programa para comenzar");
	}
	else{
		fclose(ptrF);
		printf("El Archivo agenda.txt existe.");
		menu();		
	}
	
}
int menu(){
	int opc;
	system("cls");z
	printf("\nSeleccione una de las siguientes opciones, tecleando el numero de la opcion que desee elegir");
	printf("\n1] Dar de alta nuevo contacto");
	printf("\n2] Mostrar todos los contactos");
	printf("\n3] Borrar Agenda");
	printf("\n4] Salir del programa\n");
	scanf("%d", &opc);
	if(opc<5 && opc>0){
		switch(opc){
case 1:
				alta();
				break;
			case 2:
				mostrar();
				break;
			case 3:
				borrar();
				break;
			case 4:
				printf("\nHasta luego");
				exit(1);
				break;
		}
	}
	else{
		printf("\nOpcion no valida, intente de nuevo");
		menu();
	}
return 0;
}
